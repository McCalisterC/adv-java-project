<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tapehat.combat.GameController">
   <children>
       <Pane fx:id="battleScreen" prefHeight="720.0" prefWidth="1280.0">
         <children>
              <Label fx:id="player1HpLabel" alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="30.0" prefWidth="300.0" text="Player 1 HP: 100">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
              <Label fx:id="player2HpLabel" alignment="CENTER" layoutX="966.0" layoutY="14.0" prefHeight="30.0" prefWidth="300.0" text="Player 2 HP: 100">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
              <Button fx:id="attackButton" layoutX="134.0" layoutY="201.0" onAction="#onAttack" prefHeight="25.0" prefWidth="60.0" text="Attack" />
              <Button fx:id="healButton" layoutX="134.0" layoutY="265.0" onAction="#onHeal" prefHeight="25.0" prefWidth="60.0" text="Heal" />
         </children>
      </Pane>
   </children>
</AnchorPane>
